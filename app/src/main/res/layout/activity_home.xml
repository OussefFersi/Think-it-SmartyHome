<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context=".HomeActivity">


    <TextView
        android:layout_marginStart="10dp"
        android:textColor="@color/colorGray"
        android:text="JULY 17, 2020"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:id="@+id/currentDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/homeWelcomeMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:fontFamily="@font/nunito"
        android:text="Welcome, Jordan!"
       android:textStyle="bold"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currentDateText" />
<androidx.recyclerview.widget.RecyclerView
    android:layout_marginTop="8dp"
    app:layout_constraintTop_toBottomOf="@+id/homeWelcomeMessage"
    app:layout_constraintBottom_toBottomOf="parent"
    android:id="@+id/mHomeRecycleView"
    android:layout_width="match_parent"
    android:layout_height="0dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>